#include <stdio.h>

int main() {
    int i, j;

    // ===== Array 1 Dimensi =====
    int a1[6]; // 6 elemen int
    printf("Alamat memori Array 1 Dimensi:\n");
    for (i = 0; i < 6; i++) {
        printf("a1[%d]  - %X\n", i, &a1[i]);
    }
    printf("\n");

    // ===== Array 2 Dimensi =====
    int a2[2][3]; // 2 baris, 3 kolom = total 6 elemen int
    printf("Alamat memori Array 2 Dimensi:\n");
    for (i = 0; i < 2; i++) {         // loop baris
        for (j = 0; j < 3; j++) {     // loop kolom
            printf("a2[%d][%d] - %X\n", i, j, &a2[i][j]);
        }
    }

    return 0;
}
