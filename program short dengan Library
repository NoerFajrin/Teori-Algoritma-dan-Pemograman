#include <stdio.h>
#include <stdlib.h>

// Fungsi pembanding untuk qsort
int compare(const void *a, const void *b) {
    return (*(int*)a - *(int*)b);
}

int main() {
    int arr[3];
    int i;

    // Input 3 angka
    for (i = 0; i < 3; i++) {
        printf("Masukkan angka ke-%d: ", i + 1);
        scanf("%d", &arr[i]);
    }

    // Urutkan array
    qsort(arr, 3, sizeof(int), compare);

    // Tampilkan hasil
    printf("Urutan dari terkecil ke terbesar: ");
    for (i = 0; i < 3; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
}
